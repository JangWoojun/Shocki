<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:visibility="gone"
        android:id="@+id/other_chat_box"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:strokeColor="#E4E4EF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/background_accent_Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/other_chat_text"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="9dp"
            android:textColor="@color/white"
            style="@style/caption_default"
            android:maxWidth="216dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chat_box"
        android:visibility="gone"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:strokeColor="#E4E4EF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chat_text"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="9dp"
            android:textColor="@color/Text_Default_Primary"
            android:text="제품 구성품은 무엇이 있나요?"
            style="@style/caption_default"
            android:maxWidth="216dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:visibility="gone"
        android:id="@+id/add_chat_button"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:strokeColor="#E4E4EF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginVertical="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/plus_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/Text_Default_Quaternary"
                android:text="질문 추가"
                style="@style/caption_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>