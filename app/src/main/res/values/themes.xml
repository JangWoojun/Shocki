<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Shock" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Shock" parent="Base.Theme.Shock" />
    
    <style name="caption_accent">
        <item name="android:fontFamily">@font/wanted_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20dp</item>
    </style>
    <style name="caption_default">
        <item name="android:fontFamily">@font/wanted_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20dp</item>
    </style>

    <style name="body_accent">
        <item name="android:fontFamily">@font/wanted_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24dp</item>
    </style>
    <style name="body_default">
        <item name="android:fontFamily">@font/wanted_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24dp</item>
    </style>

    <style name="heading_accent">
        <item name="android:fontFamily">@font/wanted_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">28sp</item>
    </style>
    <style name="heading_default">
        <item name="android:fontFamily">@font/wanted_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">28dp</item>
    </style>

    <style name="display_accent">
        <item name="android:fontFamily">@font/wanted_semibold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">40dp</item>
    </style>
    <style name="display_default">
        <item name="android:fontFamily">@font/wanted_medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">40dp</item>
    </style>
</resources>